{
  "compilerOptions": {
    "target": "ES6", // Target modern JavaScript
    "module": "ESNext", // Use ESNext modules for React
    "moduleResolution": "Node", // Resolve modules in Node.js style
    "jsx": "react-jsx", // Use the new JSX transform
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Allow default imports from CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Enforce consistent casing in imports
  },
  "include": ["src/**/*"], // Include all files in the src directory
  "exclude": ["node_modules", "build"] // Exclude unnecessary directories
}
